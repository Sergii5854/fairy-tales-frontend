html {
    font-size: 75%;
}

body {
    font-size: 1rem;
    line-height: 1.5;
    font-family: 'Open Sans', 'Helvetica', 'Arial', sans-serif;
    font-stretch: normal;
    color: #334152;
    letter-spacing: 0.4px;
    overflow-y: scroll;
    position: relative;
    margin 0
}
.main
    display flex
    width 100%
    height auto
    min-height 100vh
.main__content
    width 100%
    height auto
    background-color: rgba(220, 118, 39, 0.3);

.main__routers
    width 100%

body.open-menu .main__content
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
    -webkit-transition: .25s ease-in-out;
    -moz-transition: .25s ease-in-out;
    -o-transition: .25s ease-in-out;
    transition: .25s ease-in-out;

body .main__content
    width: 100%;
    -webkit-transform: rotate(0deg);
    -moz-transform: rotate(0deg);
    -o-transform: rotate(0deg);
    transform: rotate(0deg);
    -webkit-transition: .25s ease-in-out;
    -moz-transition: .25s ease-in-out;
    -o-transition: .25s ease-in-out;
    transition: .25s ease-in-out;
.loader
    width 100%
    height 100vh
    vertical-align: middle;