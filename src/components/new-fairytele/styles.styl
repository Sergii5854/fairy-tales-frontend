@import './../../theme/style.styl'

input
  outline none
  border none

textarea.textarea
  min-height 60px

.new__fairytale input:not([type]),
.new__fairytale input[type=text]:not(.browser-default),
.new__fairytale input[type=password]:not(.browser-default),
.new__fairytale input[type=email]:not(.browser-default),
.new__fairytale input[type=url]:not(.browser-default),
.new__fairytale input[type=time]:not(.browser-default),
.new__fairytale input[type=date]:not(.browser-default),
.new__fairytale input[type=datetime]:not(.browser-default),
.new__fairytale input[type=datetime-local]:not(.browser-default),
.new__fairytale input[type=tel]:not(.browser-default),
.new__fairytale input[type=number]:not(.browser-default),
.new__fairytale input[type=search]:not(.browser-default)
  height 1.5rem

.new__fairytale input:not([type]):focus,
.new__fairytale input[type=text]:not(.browser-default):focus,
.new__fairytale input[type=password]:not(.browser-default):focus,
.new__fairytale input[type=email]:not(.browser-default):focus,
.new__fairytale input[type=url]:not(.browser-default):focus,
.new__fairytale input[type=time]:not(.browser-default):focus,
.new__fairytale input[type=date]:not(.browser-default):focus,
.new__fairytale input[type=datetime]:not(.browser-default):focus,
.new__fairytale input[type=datetime-local]:not(.browser-default):focus,
.new__fairytale input[type=tel]:not(.browser-default):focus,
.new__fairytale input[type=number]:not(.browser-default):focus,
.new__fairytale input[type=search]:not(.browser-default):focus
  border-bottom: 1px solid $new_fairytele-bottom-border
  -webkit-box-shadow: 0 1px 0 0 $new_fairytele-shadow
  box-shadow: 0 1px 0 0 $new_fairytele-shadow

.new__fairytale textarea:focus
  border: 1px solid $new_fairytele-bottom-border
  outline: $new_fairytele-outline auto 5px

.new__fairytale-container
  background-color $modal__background-head
  position fixed
  height 100%
  width 100%
  top 0
  left 0
  display flex
  align-items center
  justify-content center
  max-width 100%
  box-sizing border-box
  z-index 9999

.new__fairytale-wrap
  position relative
  flex-basis 912px

.new__fairytale
  padding: 9px 20px 9px 30px;
  background-color $modal__background

.new__fairytale__header
  display flex
  justify-content space-between
  align-items center
  background-color $modal__header
  color $modal__header-font
  padding 0 20px 0 30px
  border-radius 4px 4px 0 0

.new__fairytale__header__link
  text-decoration none
  color $modal__header-font
  cursor pointer
  transition .3s
  &:hover
    color $main__hover

.new__fairytale__header__link__text
  font-family Roboto
  font-size 14px
  line-height 1.14
  width 100%

.new__fairytale__text
  font-family Roboto
  font-size 13px
  line-height 1.15

.new__fairytale__label
  color $modal__label
  width 65px
  display inline-block

.new__fairytale__input
  border none
  outline none
  width: 100%;
  color $modal__input-font

.new__fairytale__text-area
  border none
  outline none
  width 100%
  height 225px
  resize none

.new__fairytale__button
  display flex
  justify-content flex-end
  padding 15px 0
  background-color $modal__background

.new__fairytale__button__item
  padding 0 20px 0 0

.new__fairytale-border

  border-top 1.1px solid $modal__label

.new__fairytale__button .btn__close
  background-color: $btn__close-bg ;
  border: 1px solid $btn__close-border;
  color: $btn__close-color;
  width: 90px;
  height: 30px;
  border-radius: 2px;
  line-height: 1.43;
  box-shadow: 0 2px 2px 0 $btn__close-shadow;
  text-align: center;
  text-transform: uppercase;
  font-family: Roboto;
  font-size: 14px;
  font-weight: 500;
  outline: none;
  cursor: pointer;
  transition: 0.3s;
  margin 10px

.new__fairytale__button .btn__close:hover
  color: #fff;
  background-color: $btn__close-bg-hover ;
  border: 1px solid $btn__close-border;

.new__fairytale__button .btn__add
  color: #fff;
  background-color: $btn__add-bg-hover;
  border: 1px solid $btn__add-border;
  width: 90px;
  height: 30px;
  border-radius: 2px;
  line-height: 1.43;
  box-shadow: 0 2px 2px 0 $btn__close-shadow;
  text-align: center;
  text-transform: uppercase;
  font-family: Roboto;
  font-size: 14px;
  font-weight: 500;
  outline: none;
  cursor: pointer;
  transition: 0.3s;
  margin 10px

.new__fairytale__button .btn__add:hover
  background-color: #fff;
  border: 1px solid $btn__close-border;
  color: $btn__add-color;
