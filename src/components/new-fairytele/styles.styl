@import './../../theme/style.styl'

input
  outline none
  border none

.new__fairytale-container
  background-color $modal__background-head
  position fixed
  height 100%
  width 100%
  top 0
  left 0
  display flex
  align-items center
  justify-content center
  max-width 100%
  box-sizing border-box
  z-index 9999

.new__fairytale-wrap
  position relative
  flex-basis 912px

.new__fairytale
  padding: 9px 20px 9px 30px;
  background-color $modal__background

.new__fairytale__header
  display flex
  justify-content space-between
  align-items center
  background-color $modal__header
  color $modal__header-font
  padding 0 20px 0 30px
  border-radius 4px 4px 0 0

.new__fairytale__header__link
  text-decoration none
  color $modal__header-font
  cursor pointer
  transition .3s
  &:hover
    color $main__hover

.new__fairytale__header__link__text
  font-family Roboto
  font-size 14px
  line-height 1.14
  width 100%

.new__fairytale__text
  font-family Roboto
  font-size 13px
  line-height 1.15

.new__fairytale__label
  color $modal__label
  width 65px
  display inline-block

.new__fairytale__input
  border none
  outline none
  width: 100%;
  color $modal__input-font

.new__fairytale__text-area
  border none
  outline none
  width 100%
  height 225px
  resize none

.new__fairytale__button
  display flex
  justify-content flex-end
  padding 15px 0
  background-color $modal__background

.new__fairytale__button__item
  padding 0 20px 0 0

.new__fairytale-border

  border-top 1.1px solid $modal__label

.btn__close
  background-color: #fff;
  border: 1px solid #009688;
  color: #009688;
  width: 90px;
  height: 36px;
  border-radius: 2px;
  line-height: 1.43;
  box-shadow: 0 2px 2px 0 rgba(0,0,0,0.48);
  text-align: center;
  text-transform: uppercase;
  font-family: Roboto;
  font-size: 14px;
  font-weight: 500;
  outline: none;
  cursor: pointer;
  transition: 0.3s;
  margin 10px

.btn__add
  color: #fff;
