@import './../../theme/style.styl'

.form {
  width: $login__form-width ;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 1rem auto 0 auto;

  &_logo {
    font-family: 'Lobster', cursive;
    font-size: 2.5rem;
    margin-bottom: 8px;
    & span {
      color: $login__primary-color ;
    }
  }
  &_title{
    font-weight: bold;
    margin-bottom: 8px;
    & span {
      color: $login__primary-color ;
    }
  }

  &_items{
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  &_inputs{
    width: $login__form-width ;
    color: $login__secondary-color-tint
    margin: 1rem 0;
    position: relative;

    & label {
      font-size: 16px;
      position: absolute;
      top: 10px;
      left: 0;
      pointer-events: none;
      transition: all 0.15s ease;
    }

    & input {
      width: 100%;
      height:36px;
      background: inherit;
      border: none;
      border-bottom: 1px solid;
      color: inherit;

      &:focus, &:valid{
        outline: none;
        border-width: 2px;
        margin-bottom: -1px;
        border-color: $login__primary-color ;
      }

      &:focus + label , &:valid + label{
        transform: translateY(-20px);
        font-size: 70%;
        color: $login__primary-color ;
      }
    }
  }

  &_button {
    width: 100%;
    height: 36px;
    margin-top: 16px;
    padding-left: 16px;
    padding-right: 16px;
    border: none;
    border-radius: 2px;
    color: white;
    background: $login__primary-color ;
    box-shadow:2px 2px 2px $login__primary-color-dark ;

    &:focus {
      outline: none;
    }

    &:active {
      outline: none;
      background: $login__primary-color-dark ;
    }
  }

  &_other {
    width: 100%;
    margin-top: 8px;
    display: flex;
    justify-content: space-between;
    & a {
      color: $login__primary-color ;
      text-decoration: none;
    }
  }

}
.form_other
  justify-content center
  a
    padding: 10px
    color $form_button-color;
  a:hover
    text-decoration: underline;

button.form_button
  background-color: $form_button-bg;
  border 1px solid $form_button-border;
  color #fff;
  box-shadow:2px 2px 2px $form_button-shadow;

button:focus,
button:hover
  background-color: $btn__close-bg;
  border 1px solid $form_button-border;
  color $form_button-color;
  box-shadow:2px 2px 2px $form_button-shadow ;