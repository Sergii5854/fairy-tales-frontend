.search
  display: flex
  padding:15px 40px
  position relative
  max-width: 420px;

.search__input
  widows: 100%
  border-radius 5px
  border 1px solid rgba(0, 0,0, 0.3)
  background-color: rgba(255, 255, 255, 0.28)
  font-family: Roboto;
  font-size: 16px;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: 1.19;
  letter-spacing: normal;
  text-align: left;
  color: #ffffff;
  position: relative;
  outline none
  padding 10px 100px
.search__input:focus
  outline none

.search__input::placeholder
  color: #ffffff;


.search__btn
  background transparent
  border none
  width: 24px;
  height: 24px;
  object-fit: contain;
  padding 8px 11px;
  position: absolute;
  z-index 9
  outline none
  top: 23px;
  transition .3s
  cursor pointer

.search__btn:hover
  opacity 0.8
.search__submit
  //background-image url('./ic_search.svg')
  left: 75px;

