@import './../../theme/style.styl'

.header
  display flex
  align-items: center;
  flex auto
  width: 100%;
  box-shadow: 0 3px 6px 0 $main__shadow ;
  width: 100%

#logo
  display: block;
  margin-right: 1%;

#logo.hidden
  display: none;

.title-wrapper h1
  font-size: 3rem;
  margin: 2.5rem 0 1.68rem 0;

.title-wrapper h3
  font-size: 2rem;
  margin: 1.5rem 0 1.168rem 0;

.title-wrapper
  margin: 0 auto;
  text-align: center;
.sidebar
  max-width: 40px;
  min-height: 40px;


.sidebar__ul
  overflow auto

#nav-icon1 #menu span:nth-child(1)
  top: 0px;

#nav-icon1 #menu span:nth-child(2)
 top: 10px;

#nav-icon1 #menu span:nth-child(3)
  top: 20px;

#nav-icon1 #menu.open span:nth-child(1)
  top: 18px;
  -webkit-transform: rotate(135deg);
  -moz-transform: rotate(135deg);
  -o-transform: rotate(135deg);
  transform: rotate(135deg);

#nav-icon1 #menu.open span:nth-child(2)
  opacity: 0;
  left: -60px;

#nav-icon1 #menu.open span:nth-child(3)
  top: 18px;
  -webkit-transform: rotate(-135deg);
  -moz-transform: rotate(-135deg);
  -o-transform: rotate(-135deg);
  transform: rotate(-135deg);

.open #menu-liks
  display: block;
  overflow: unset;

#menu
  width: 40px;
  height: 30px;
  position: relative;

.open #menu
  position: relative;
  height: 40px;
  margin-left: 70%;
  display: inline-block;
  margin-left: 70%;

.sidebar ul > li
  list-style-type: none;

.sidebar ul > li a
    color: #334152;
    display: block;
    padding: 20px 15%;

.sidebar ul > li a:hover
    background-color: $sidebar_item-hover;
    color: white;

.sidebar ul > li a.active
    background-color: $sidebar_item-hover;
    color: white;

div.table
  width: 100%;

div.table table
    width: 100%;

section
   width: 90%;
   margin: 0 auto;
   text-align: center;

#nav-icon1, #nav-icon2, #nav-icon3, #nav-icon4
  position: relative;
  -webkit-transform: rotate(0deg);
  -moz-transform: rotate(0deg);
  -o-transform: rotate(0deg);
  transform: rotate(0deg);
  -webkit-transition: .5s ease-in-out;
  -moz-transition: .5s ease-in-out;
  -o-transition: .5s ease-in-out;
  transition: .5s ease-in-out;
  cursor: pointer;
  margin-left: 1%;
  margin-right: 1%;

#nav-icon1 #menu span, #nav-icon3 span, #nav-icon4 span
  display: block;
  position: absolute;
  height: 5px;
  width: 100%;
  background: $menu-span;
  border-radius: 9px;
  opacity: 1;
  left: 0;
  -webkit-transform: rotate(0deg);
  -moz-transform: rotate(0deg);
  -o-transform: rotate(0deg);
  transform: rotate(0deg);
  -webkit-transition: .25s ease-in-out;
  -moz-transition: .25s ease-in-out;
  -o-transition: .25s ease-in-out;
  transition: .25s ease-in-out;

header img
   margin-right: 20px;

