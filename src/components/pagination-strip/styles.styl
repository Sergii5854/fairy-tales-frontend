.pagination-wrapper
  text-align: center;

.pagination-wrapper ul
  display: inline-block;
  text-align: center;

.pagination li
  display: inline-block;
  border-radius: 2px;
  text-align: center;
  vertical-align: inherit;
  height: auto;

.pagination li a.active
  background-color: #d3531a;

.pagination li a
  color: #444;
  display: inline-block;
  font-size: 1.2rem;
  padding: 0 10px;
  line-height: 30px;