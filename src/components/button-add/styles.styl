@import './../../theme/style.styl'


.button__add
  display inline-block
  text-align center
  border-radius 50%
  width 60px
  height 60px
  background-color $button__add
  box-shadow 0 3px 6px 0 $button__add-shadow
  text-decoration none
  color $button__add-font
  font-size 24px
  line-height 60px
  cursor pointer
  transition .3s
  position: fixed;
  bottom: 30px;
  right: 40px;
  &:hover
    background-color $secondary__hover



